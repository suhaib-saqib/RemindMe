<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/list_event_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/list_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignEnd="@id/list_event_name"
            android:layout_alignRight="@id/list_event_name"
            android:paddingRight="30dp"
            android:paddingEnd="30dp"
            android:text="date"/>
        <TextView
            android:id="@+id/list_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignEnd="@id/list_event_name"
            android:layout_alignRight="@id/list_event_name"
            android:paddingRight="150dp"
            android:paddingEnd="150dp"
            android:text="time"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_event"
            android:layout_alignEnd="@id/list_event_date"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@id/list_event_date"
            android:background="@android:color/transparent"
            android:src="@drawable/delete_relation_button"/>
    </RelativeLayout>
</LinearLayout>